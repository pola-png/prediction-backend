{
  "name": "goalgazer-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "preinstall": "npm install --workspaces",
    "install": "npm run install --workspace=backend || true",
    "build": "npm run build --workspace=backend || true",
    "start": "npm run start --workspace=backend",
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}